              <!--<div id="DataTables_Table_0_filter" class="dataTables_filter">-->
              <!--<label>Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="DataTables_Table_0"></label>-->
              <!--</div>-->

              <!--<div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">Showing 1 to 10-->
              <!--of 57 entries-->
              <!--</div>-->

              <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 168px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                    Name
                  </th>
                  <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 168px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                    Description
                  </th>
                  <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 168px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                    Identification Number
                  </th>
                  <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 168px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                    Quantity (Stock)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 204px;" aria-label="Browser: activate to sort column ascending">
                    Used
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 204px;" aria-label="Browser: activate to sort column ascending">
                    Status
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 95px;" aria-label="CSS grade: activate to sort column ascending">
                    Action
                  </th>
                </tr>
                </thead>
                <tbody>
                <% @parts_inventories.each_with_index do |parts, i| %>
                    <tr class="gradeA <%= i%2 == 0 ? 'odd' : 'even' %>" role="row">
                      <td class="sorting_1"><%= parts.name %></td>
                      <td><%= parts.description.truncate(40) %></td>
                      <td><%= parts.identification_no %></td>
                      <td><%= parts.stock %></td>
                      <td><%= parts.used %></td>
                      <td class="text-center"><%= parts.status ? 'Active' : 'Inactive' %></td>
                      <td>
                        <%= link_to 'Show', admin_parts_inventory_path(parts), :class => 'btn btn-white btn-xs', 'data-no-turbolink' => true %>
                        <%= link_to 'Edit', edit_admin_parts_inventory_path(parts), :class => 'btn btn-primary btn-xs' if admins? %>
                        <%= link_to 'Delete', admin_parts_inventory_path(parts), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-xs btn-danger' if admins? %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>