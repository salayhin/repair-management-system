<%= form_for [:admin, @user]  do |f| %>

    <%= render partial: 'shared/errors', locals: {object: @user}  %>

    <div class="wrapper wrapper-content animated fadeInRight">
      <h1><%= @user.new_record? ? 'New User' : 'Edit User' %></h1>

      <div class="row">
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>User
                <small>Information</small>
              </h5>
            </div>
            <div class="ibox-content">
              <div class="row">
                <div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Basic info</h3>

                  <p>Enter User email password</p>

                  <form role="form">
                    <div class="form-group">
                      <%= f.label :email %>
                      <%= f.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password %>
                      <%= f.text_field :password, class: 'form-control', placeholder: 'Password' %>
                    </div>
                  </form>
                </div>

                <div class="col-sm-6">
                  <h3>
                    User's Role
                  </h3>
                  <p>Radios without label text</p>
                  <% get_roles.each_with_index do |role, indx| %>
                      <label class="radio user-role-radio">
                        <%= f.radio_button :role_id, role.id, :checked => @user.roles.include?(role), id: "optionsRadios#{indx}" %>
                        <%= role.name %>
                      </label>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="actions form-group">
        <%= f.submit class: 'btn btn-sm btn-primary pull-left m-t-n-xs' %>
        <%= link_to 'Show', @user.profile, class: 'btn btn-sm btn-white m-t-n-xs margin-left' %>
      </div>
    </div>

<% end %>