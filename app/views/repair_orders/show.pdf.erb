<div class="container-fluid">
  <div class="container main-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
          <div class="ibox-content p-xl">
            <div class="row">
              <div class="col-sm-6">
                <h5>From:</h5>
                <address>
                  <strong>Electra Servicing Center</strong><br>
                  <%= @repair_order.service_center.name %><br>
                  <%= @repair_order.service_center.address %><br>
                  <abbr title="Phone">P:</abbr> <%= @repair_order.service_center.phone %>
                </address>
              </div>

              <div class="col-sm-6 text-right">
                <h4>Invoice No.</h4>
                <h4 class="text-navy">INV-000567F7-00</h4>
                <span>To:</span>
                <address>
                  <strong><%= @repair_order.customer_name %></strong><br>
                  <%= @repair_order.customer_address %><br>
                  <%= @repair_order.customer_email %><br>
                  <abbr title="Phone">P:</abbr> <%= @repair_order.customer_contact_no %>
                </address>
                <p>
                  <span><strong>Invoice Date:</strong> <%= @repair_order.created_at.strftime('%v') %></span><br>
                  <span><strong>Due Date:</strong> <%= @repair_order.delivery_date.strftime('%v') %></span>
                </p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>Device:</dt>
                  <dd>
                    <div><strong><%= @repair_order.device_model.name %></strong></div>
                    <small> | <%= @repair_order.device_brand.name %></small>
                  </dd>
                  <dt>IMEI-1:</dt>
                  <dd>  <%= @repair_order.imei1 %></dd>
                  <dt>Device Condition:</dt>
                  <dd>
                    <% @repair_order.device_condition.each do |con| %>
                        <%= RepairOrder::DEVICE_CONDITIONS[con.to_i] %><br>
                    <% end %>
                  </dd>

                </dl>
              </div>
              <div id="cluster_info" class="col-md-6">
                <dl class="dl-horizontal">
                  <dt>Accessories:</dt>
                  <dd><% @repair_order.accessories_present.each do |acc| %>
                        <%= RepairOrder::ACCESORIES[acc.to_i] %><br>
                    <% end %></dd>
                  <dt>Dealer:</dt>
                  <dd> <%= @repair_order.dealer %></dd>
                  <dt>Warranty:</dt>
                  <dd> <%= @repair_order.warranty ? 'Warranty present' : 'Warranty NOT present' %></dd>
                </dl>
              </div>
            </div>


            <!-- /table-responsive -->

